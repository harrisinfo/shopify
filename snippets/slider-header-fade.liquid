<div class="swiper-container header_announce header_announce_fade">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
    {% if block.type == 'benefit' %}
    <div class="swiper-slide"><p>{{ block.settings.title }}</p></div>
    {% endif %}
    {% endfor %}
  </div>
</div>
<style>
  .header_announce_fade .swiper-slide { opacity: 0!important; }
  .header_announce_fade .swiper-slide-active { opacity: 1!important; }
</style>
<script>
  var headerAnnounce = new Swiper('.header_announce', {
    loop: true,
    speed: 1000,
    effect: 'fade',
    {% if section.settings.active_autoplay %}
    autoplay: {
      delay: {{ section.settings.speed_slider }},
    }
    {% endif %}
  });
</script>