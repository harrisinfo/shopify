  var email = "{{settings.theme_licence_email}}";
  var licence_key = "{{settings.theme_licence_key}}";
  var url = document.domain;

  jQuery.ajax({
    url: "https://webdevelopment111.com/story-theme/test_index.php",
    type: "POST",
