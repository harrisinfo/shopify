{% unless section.settings.dividers_top == 'none' %}
<div class="dividers-svg dividers-svg-{{ section.id }} dividers-top">
  <style>.dividers-svg-{{ section.id }} path, .dividers-svg-{{ section.id }} polygon { fill: {{ section.settings.color_fill_svg_top }}; }</style>
  {% case section.settings.dividers_top %}
  {% when 'little-arrow' %}
  {% include 'dividers-little-arrow' %}
  {% when 'wave' %}
  {% include 'dividers-wave' %}
  {% when 'straight' %}
  {% include 'dividers-straight' %}
  {% when 'straight-wave' %}
  {% include 'dividers-straight-wave' %}
  {% when 'arrow' %}
  {% include 'dividers-arrow' %}
  {% when 'single-wave' %}
  {% include 'dividers-single-wave' %}
  {% when 'single-reverse-wave' %}
  {% include 'dividers-single-reverse-wave' %}
  {% when 'straight-reverse' %}
  {% include 'dividers-straight-reverse' %}
  {% endcase %}
</div>
{% endunless %}
<div id="logo-trust-mini-{{ section.id }}"
     style="{% if section.settings.border_top %}border-top: 1px solid {{ section.settings.color_border }};{% endif %}{% if section.settings.border_bottom %}border-bottom: 1px solid {{ section.settings.color_border }};{% endif %}
            {% if section.settings.color_bg contains 'fix' %}background-color: {{ section.settings.color_bg_fix }};{% endif %}"
     {% if section.settings.color_bg contains 'shade' %}class="wrapper-color"{% endif %}>
  <style>
    #logo-trust-mini-{{ section.id }} {
      {% if section.settings.full_width %}max-width: 100%;{% endif %}
    }
    .trust_title-mini--{{ section.id }} {
      color: {{ section.settings.color_title }}!important;
    }
    #logo-trust-mini-{{ section.id }} svg path {
      fill: {{ section.settings.color_svg }}!important;
    }
    #logo-trust-mini-{{ section.id }} .h4 {
      color: {{ section.settings.color_text }}!important;
    }
    .logo-list-mini .swiper-button-prev::after, .logo-list-mini .swiper-button-next::after {
      color: {{ section.settings.color_text }};
    }
  </style>

  <div id="{{ section.settings.title }}" class="{{ section.settings.spacing_top }} {{ section.settings.spacing_bottom }} {{ section.settings.spacing_top_sm }} {{ section.settings.spacing_bottom_sm }} site_width{% if section.settings.full_width %}_full_width{% endif %}">
    {% if section.settings.title_section != blank %}
    <div class="section-header text-{{ section.settings.alignement_text }}">
      <h2 {% if section.settings.anim_active %}data-aos="fade-{{ section.settings.animation_img }}"{% endif %} class="h1 section-header__title trust_title-mini--{{ section.id }}">{{ section.settings.title_section }}</h2>
    </div>
    {% endif %}

    <div class="logo-section-mini desktop_only">
      <div {% if section.settings.anim_active %}data-aos="fade-{{ section.settings.animation_img }}"{% endif %} class="logo-list-mini">
        {% for block in section.blocks %}
        {% case block.settings.width %}
        {% when '25%' %}
        {%- assign block_width = 'one-quarter' -%}
        {% when '33%' %}
        {%- assign block_width = 'one-third' -%}
        {% when '50%' %}
        {%- assign block_width = 'one-half' -%}
        {% when '66%' %}
        {%- assign block_width = 'two-thirds' -%}
        {% when '75%' %}
        {%- assign block_width = 'three-quarters' -%}
        {% when '100%' %}
        {%- assign block_width = 'one-whole' -%}
        {% endcase %}
        <div class="logo_group-mini {{ block_width }}" {{ block.shopify_attributes }}>
          <div class="logo--image-mini">
            {% case block.settings.icon %}
            {% when 'refund' %}
            {% include 'icon-refund' %}
            {% when 'support' %}
            {% include 'icon-support' %}
            {% when 'truck' %}
            {% include 'icon-truck' %}
            {% when 'secure-payment' %}
            {% include 'icon-secure-payment' %}
            {% when 'customers' %}
            {% include 'icon-customers' %}
            {% when 'numero-un' %}
            {% include 'icon-numero-un' %}
            {% when 'livraison' %}
            {% include 'icon-livraison' %}
            {% when 'bon' %}
            {% include 'icon-bon' %}
            {% when 'custom' %}
            <img src="{{ block.settings.customsvg }}" class="logo--image-mini">
            {% endcase %}
          </div>
          {% if block.settings.title != blank %}
          <p class="title-logo_list-mini h4">{{ block.settings.title }}</p>
          {% endif %}
        </div>
        {% endfor %}
      </div>
    </div>

    <div class="logo-section-mini mobile_only">
      <div {% if section.settings.anim_active %}data-aos="fade-{{ section.settings.animation_img }}"{% endif %} class="swiper-container logo-list-mini">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="logo_group-mini" {{ block.shopify_attributes }}>
              <div class="logo--image-mini">
                {% case block.settings.icon %}
                {% when 'refund' %}
                {% include 'icon-refund' %}
                {% when 'support' %}
                {% include 'icon-support' %}
                {% when 'truck' %}
                {% include 'icon-truck' %}
                {% when 'secure-payment' %}
                {% include 'icon-secure-payment' %}
                {% when 'customers' %}
                {% include 'icon-customers' %}
                {% when 'numero-un' %}
                {% include 'icon-numero-un' %}
                {% when 'livraison' %}
                {% include 'icon-livraison' %}
                {% when 'bon' %}
                {% include 'icon-bon' %}
                {% when 'custom' %}
                <img src="{{ block.settings.customsvg }}" class="logo--image-mini">
                {% endcase %}
              </div>
              {% if block.settings.title != blank %}
              <p class="title-logo_list-mini h4">{{ block.settings.title }}</p>
              {% endif %}
            </div>
          </div>
          {% endfor %}
        </div>
        <div class="swiper-button-prev prev-logo-mini"></div>
        <div class="swiper-button-next next-logo-mini"></div>
      </div>
      <script>
        var logoListMini = new Swiper('.logo-list-mini', {
          loop: true,
          centeredSlides: true,
          {% if section.settings.active_autoplay %}
          autoplay: {
            delay: {{ section.settings.speed_slider }},
          },
          {% endif %}
          navigation: {
          nextEl: '.next-logo-mini',
          prevEl: '.prev-logo-mini',
        },
                                      });
      </script>
    </div>

  </div>
</div>
{% unless section.settings.dividers_bottom == 'none' %}
<div class="dividers-svg dividers-svg-{{ section.id }} dividers-bottom">
  <style>.dividers-svg-{{ section.id }} path, .dividers-svg-{{ section.id }} polygon { fill: {{ section.settings.color_fill_svg_bottom }}; }</style>
  {% case section.settings.dividers_bottom %}
  {% when 'little-arrow' %}
