{% unless section.settings.dividers_top == 'none' %}
<div class="dividers-svg dividers-svg-{{ section.id }} dividers-top">
  <style>.dividers-svg-{{ section.id }} path, .dividers-svg-{{ section.id }} polygon { fill: {{ section.settings.color_fill_svg_top }}; }</style>
  {% case section.settings.dividers_top %}
  {% when 'little-arrow' %}
  {% include 'dividers-little-arrow' %}
  {% when 'wave' %}
  {% include 'dividers-wave' %}
  {% when 'straight' %}
  {% include 'dividers-straight' %}
  {% when 'straight-wave' %}
  {% include 'dividers-straight-wave' %}
  {% when 'arrow' %}
  {% include 'dividers-arrow' %}
  {% when 'single-wave' %}
  {% include 'dividers-single-wave' %}
  {% when 'single-reverse-wave' %}
  {% include 'dividers-single-reverse-wave' %}
  {% when 'straight-reverse' %}
  {% include 'dividers-straight-reverse' %}
  {% endcase %}
</div>
{% endunless %}
<!-- /templates/product.liquid -->
{%- assign current_variant = product.selected_or_first_available_variant -%}
<style>
  #ProductSection--{{ section.id }} .single-option-radio input[type='radio']:checked + label span { background-color: {{ section.settings.variant_color }}; }
  {% if section.settings.active_border_variant_selected %}
  #ProductSection--{{ section.id }} .single-option-radio label { border: 1px solid #F2F2F2; padding: 3px; }
  #ProductSection--{{ section.id }} .single-option-radio input[type='radio']:checked + label { border-color: {{ section.settings.variant_color }}; }
  {% endif %}
</style>

<div itemscope itemtype="http://schema.org/Product" id="ProductSection--{{ section.id }}"
     data-section-id="{{ section.id }}"
     data-section-type="product-template"
     data-image-zoom-type="{{ section.settings.enable_image_zoom }}"
     data-enable-history-state="true"
     {% if first_3d_model %}data-has-model="true"{% endif %}>

  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
  <meta itemprop="image" content="{{ product.featured_media | img_url: 'grande' }}">

  {% assign featured_media = current_variant.featured_media | default: product.featured_media %}

  <div id="{{ section.settings.title }}" class="{{ section.settings.spacing_top }} {{ section.settings.spacing_bottom }} {{ section.settings.spacing_top_sm }} {{ section.settings.spacing_bottom_sm }} wrapper-product{% if section.settings.full_width %}_full_width{% endif %}">
    <div class="grid product-single">
      <div {% if section.settings.anim_active %}data-aos="fade-{{ section.settings.animation_text }}"{% endif %} class="{% unless section.settings.full_width_img %}product-single__img_padding_sm {% endunless %}grid__item large--six-twelfths medium--six-twelfths text-center">
        <div id="ProductMediaGroup-{{ section.id }}" class="product-single__media-group-wrapper" data-product-single-media-group-wrapper>
          <div class="product-single__media-group product-single__media-group--single-xr" data-product-single-media-group>
            {%- assign enable_image_zoom = section.settings.enable_image_zoom -%}
            {% assign height = 850 %}
            {% assign width = 575 %}
            {%- assign first_3d_model = product.media | where: "media_type", "model" | first -%}
            {% comment %}
            Display product images
            {% endcomment %}
            {%- for media in product.media -%}
            {%- assign featured = false -%}
            {%- if media == featured_media -%}
            {%- assign featured = true -%}
            {%- endif -%}

            {%- capture thumbnail_alt -%}
            {%- if media.media_type == 'video' or media.media_type == 'external_video' -%}
            {{ 'products.product.video_thumbnail_alt' | t: imageAlt: media.alt | escape }}
            {%- elsif media.media_type == 'model' -%}
            {{ 'products.product.model_thumbnail_alt' | t: imageAlt: media.alt | escape }}
            {%- else -%}
            {{ 'products.product.gallery_thumbnail_alt' | t: imageAlt: media.alt | escape }}
            {%- endif -%}
            {%- endcapture -%}

            <div class="product-single__media-flex-wrapper" data-slick-media-label="{{ thumbnail_alt }}" data-product-single-media-flex-wrapper>
              <div class="product-single__media-flex">
                {%- include 'media' with media, enable_image_zoom: enable_image_zoom, featured: featured, width: width, height: height -%}
              </div>
            </div>
            {%- endfor -%}
          </div>

          {%- if first_3d_model -%}
          {%- include 'xr-button' with model_id: first_3d_model.id, multi: false -%}
          {%- endif -%}

          <ul class="product-single__thumbnails small--hide grid-uniform" data-product-thumbnails>
            {% for media in product.media %}
            {% if product.media.size > 1 %}
            <li class="grid__item one-sixth">
              {%- capture thumbnail_alt -%}
              {%- if media.media_type == 'video' or media.media_type == 'external_video' -%}
              {{ 'products.product.video_thumbnail_alt' | t: imageAlt: media.alt | escape }}
              {%- elsif media.media_type == 'model' -%}
              {{ 'products.product.model_thumbnail_alt' | t: imageAlt: media.alt | escape }}
              {%- else -%}
              {{ 'products.product.gallery_thumbnail_alt' | t: imageAlt: media.alt | escape }}
              {%- endif -%}
              {%- endcapture -%}

              <a href="{{ media | img_url: 'grande' }}" class="product-single__thumbnail{% if media == featured_media %} active-thumb{% endif %}" data-media-id="{{ section.id }}-{{ media.id }}" data-product-thumbnail>
                <img class="product-single__thumb" src="{{ media | img_url: '150x' }}" alt="{{ thumbnail_alt }}">
                {%- if media.media_type == 'video' or media.media_type == 'external_video' or media.media_type == 'model' -%}
                <div class="product-single__thumbnail-badge">
                  {% include 'svg-definitions' with media.media_type %}
                </div>
                {%- endif -%}
              </a>
            </li>
            {% endif %}
            {% endfor %}
          </ul>

          <div class="slick__controls slick-slider">
            <button class="slick__arrow slick__arrow--previous" aria-label="{{ 'home_page.slideshow.previous_slide' | t }}" data-slick-previous>
              <span class="icon icon-slide-prev" aria-hidden="true"></span>
            </button>
            <button class="slick__arrow slick__arrow--next" aria-label="{{ 'home_page.slideshow.next_slide' | t }}" data-slick-next>
              <span class="icon icon-slide-next" aria-hidden="true"></span>
            </button>
            <div class="slick__dots-wrapper" data-slick-dots>
            </div>
          </div>

        </div>
      </div>
      <div class="grid__item product-single__meta--wrapper medium--six-twelfths large--six-twelfths">
        <div class="product-single__meta">

          {% if section.settings.text_subtitle != blank %}<div class="subtitle_offer_text{% if section.settings.text_subtitle_anim %} opacity_animation{% endif %}">{{ section.settings.text_subtitle }}</div>{% endif %}
          <h1 {% if section.settings.anim_active %}data-aos="fade-{{ section.settings.animation_img }}"{% endif %} id="{{ section.id }}-top" class="{{ section.settings.choix_title }} product-single__title" itemprop="name">{{ product.title }}</h1>	    
          {% if section.settings.fake_reviews_phrase != blank %}
          <div {% if section.settings.anim_active %}data-aos="fade-{{ section.settings.animation_img }}"{% endif %} class="product-single__stars"><span class="star-font"><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i></span> {{ section.settings.fake_reviews_phrase }}</div>
          {% endif %}
          <div itemprop="offers" itemscope itemtype="http://schema.org/Offer">
            {% comment %}
            Optionally show the 'compare at' or original price of the product.
            {% endcomment %}
            {% include 'product-price', variant: current_variant %}

            {% capture usp %}
            <div {% if section.settings.anim_active %}data-aos="fade-{{ section.settings.animation_img }}"{% endif %} class="product-single__desc">
              {% include 'usp' %}
            </div>
            {% endcapture %}
            {% if section.settings.position_usp == 'above' %}
            {{ usp }}
            {% endif %}

            {% include 'size_guide' %}

            <style>
              .product-single__desc p{% if section.settings.color_usp_icon %} i{% endif %}, .product-single__desc_under p{% if section.settings.color_usp_icon %} i{% endif %} {
                color: {{ section.settings.color_usp }};
              }
              .timer_wrapper { background: {{ section.settings.bg_timer_wrapper }}; } .testi-container { background: {{ section.settings.bg_testi }}; }
            </style>

            <meta itemprop="priceCurrency" content="{{ cart.currency.iso_code }}">
            <link itemprop="availability" href="http://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}">

            {% capture "form_classes" %}
            product-single__form{% if product.has_only_default_variant %} product-single__form--no-variants{% endif %}
            {%- endcapture %}

            {% capture "form_id" %}AddToCartForm--{{ section.id }}{%- endcapture %}

            {% form 'product', product, class:form_classes, id:form_id, data-product-form: '' %}
            {% unless product.has_only_default_variant %}
            {% for option in product.options_with_values %}
            <div {% if section.settings.anim_active %}data-aos="fade-{{ section.settings.animation_img }}"{% endif %} class="radio-wrapper js product-form__item">
              <label class="single-option-radio__label"
                     for="ProductSelect-option-{{ forloop.index0 }}">
                {{ option.name | escape }}
              </label>
              {% if section.settings.product_selector == 'radio' %}
              <fieldset class="single-option-radio"
                        id="ProductSelect-option-{{ forloop.index0 }}">
                {% assign option_index = forloop.index %}
                {% for value in option.values %}
                {% assign variant_label_state = true %}
                {% if product.options.size == 1 %}
                {% unless product.variants[forloop.index0].available  %}
                {% assign variant_label_state = false %}
                {% endunless %}
                {% endif %}

                <style>
                  {% for block in section.blocks %}{% if block.type == "variant" %}
                  .variant_match_trigger-{{ block.id }} span {
                    height: {{ block.settings.width }}px!important; width: {{ block.settings.width }}px!important; overflow: hidden; color: transparent!important;
                    border-radius: {% if settings.border_radius == "big" %}50%{% elsif settings.border_radius == "little" %}5px{% else %}0px{% endif %};
                  }
                  .trigger_color-{{ block.id }} span { background: {{ block.settings.color }}!important; }
                  .trigger_image-{{ block.id }} span { background: center / cover no-repeat url({{ block.settings.image | img_url: "master" }})!important; }
                  {% endif %}{% endfor %}
                </style>

                <input type="radio"
                       {% if option.selected_value == value %} checked="checked"{% endif %}
                       {% unless variant_label_state %} disabled="disabled"{% endunless %}
                       value="{{ value | escape }}"
                       data-index="option{{ option_index }}"
                       name="option{{ option.position }}"
                       class="single-option-selector__radio{% unless variant_label_state %} disabled{% endunless %}"
                       id="ProductSelect-option-{{ option.name | handleize }}-{{ value | escape }}">
                <label for="ProductSelect-option-{{ option.name | handleize }}-{{ value | escape }}"
                       class="product {% if section.settings.shadowanimboost %}shadowanimboost{% endif %}{% unless variant_label_state %} disabled{% endunless %}
                              {% for block in section.blocks %}{% if block.type == "variant" %}
                              {% if value == block.settings.trigger %}
                              variant_match_trigger-{{ block.id }} variant_with_trigger
                              {% if block.settings.variant_type == "color" %}
                              trigger_color-{{ block.id }}
                              {% else %}
                              trigger_image-{{ block.id }}
                              {% endif %}
                              {% endif %}
                              {% endif %}{% endfor %}">
                  <span>{{ value | escape }}</span>
                </label>
                {% endfor %}
              </fieldset>
              {% else %}
              <select class="single-option-selector__radio single-option-selector-{{ section.id }} product-form__input" id="SingleOptionSelector-{{ forloop.index0 }}" data-index="option{{ forloop.index }}">
                {% for value in option.values %}
                <option value="{{ value | escape }}"{% if option.selected_value == value %} selected="selected"{% endif %}>{{ value | escape }}</option>
                {% endfor %}
              </select>
              {% endif %}
            </div>
            {% endfor %}
            {% endunless %}

            <select name="id" id="ProductSelect--{{ section.id }}" class="product-single__variants no-js">
              {% for variant in product.variants %}
              {% if variant.available %}
              <option {% if variant == product.selected_or_first_available_variant %}
                      selected="selected" {% endif %}
                      data-sku="{{ variant.sku }}"
                      value="{{ variant.id }}">
                {{ variant.title }} - {{ variant.price | money_with_currency }}
              </option>
              {% else %}
              <option disabled="disabled">
                {{ variant.title }} - {{ 'products.product.sold_out' | t }}
              </option>
              {% endif %}
              {% endfor %}
            </select>

            {% if section.settings.quantity_enabled %}
            <div {% if section.settings.anim_active %}data-aos="fade-{{ section.settings.animation_img }}"{% endif %} class="product-single__quantity">
              <label for="Quantity" class="product-single__quantity-label js-quantity-selector">{{ 'products.product.quantity' | t }}</label>
              <input type="number" hidden="hidden" id="Quantity" name="quantity" value="1" min="1" class="js-quantity-selector">
            </div>
            {% endif %}

            <div {% if section.settings.anim_active %}data-aos="fade-{{ section.settings.animation_img }}"{% endif %} class="product-single__add-to-cart product-single__add-to-cart--full-width">

              {% if section.settings.direct_checkout %}
              <input type="hidden" name="return_to" value="/checkout/" />
              {% endif %}

              <button type="submit" name="add" id="AddToCart{% unless section.settings.direct_checkout %}-{% endunless %}-{{ section.id }}" class="{{ section.settings.choix_style_bouton }} btn--add-to-cart {% if section.settings.effect_shaker %}effect_shaker {% endif %}small--one-whole medium--one-half"{% unless product.available %} disabled="disabled"{% endunless %}>
                {{ section.settings.icon_cart }}<span class="btn__text">
                {% if product.available %}
                {{ 'products.product.add_to_cart' | t }}
                {% else %}
                {{ 'products.product.sold_out' | t }}
                {% endif %}
                </span>
              </button>

              {% if section.settings.enable_payment_button %}
              {{ form | payment_button }}
              {% endif %}

            </div>
            {% endform %}

            <div {% if section.settings.anim_active %}data-aos="fade-{{ section.settings.animation_img }}"{% endif %} class="under_cta_atc">
              {% if section.settings.cart_subtext != blank %}
              <div class="cart_subtext" style="color: {{ section.settings.color_cart_subtext }};">{{ section.settings.cart_subicon }}{{ section.settings.cart_subtext }}</div>
              {% endif %}{% if section.settings.active_logos_payment %}
              {%- if settings.payment_icons_types == "auto" -%}
              {%- unless shop.enabled_payment_types == empty -%}
              <span class="visually-hidden">{{ 'general.payment.method' | t }}</span>
              <ul class="inline-list payment-icons ajaxcart__payment-icons">
                {%- for type in shop.enabled_payment_types -%}
                <li>
                  {{ type | payment_type_svg_tag: class: 'icon' }}
                </li>
                {%- endfor -%}
              </ul>
              {%- endunless -%}
              {%- elsif settings.payment_icons_types == "manual" -%}
              {% if settings.payment_icon_manual_svg == blank %}<img style="width: {{ settings.payment_icon_width }}px;" src="{{ settings.payment_icon_manual | img_url: "master" }}" />
              {% else %}<img style="width: {{ settings.payment_icon_width }}px;" src="{{ settings.payment_icon_manual_svg }}" />
              {% endif %}
              {%- endif -%}{% endif %}
            </div>

            {% include 'image_offer' %}

            {% if section.settings.position_usp == 'under' %}
            {{ usp }}
            {% endif %}

            {% if section.settings.timer_active or section.settings.stock_active %}
            <div {% if section.settings.anim_active %}data-aos="fade-{{ section.settings.animation_img }}"{% endif %} class="timer_wrapper">
              {% if section.settings.timer_active %}
              {% if settings.choice_timer == 'legal' %}
              {% include 'timer-true-product' %}
              {% else %}
              {% if settings.false_timer_type == "short" %}
              {% include 'timer', reset_in: "3 hours", end_date: "Sep 30, 2018" %}
              {% elsif settings.false_timer_type == "middle" %}
              {% include 'timer', reset_in: "2 days", end_date: "Sep 30, 2018" %}
              {% else %}
              {% include 'timer', reset_in: "10 days", end_date: "Sep 30, 2018" %}
              {% endif %}
              {% endif %}
              <p class="phrase_timer">{{ section.settings.timer_phrase_before }}{% if section.settings.timer_active_price %}
                <span id="ComparePriceTimer" class="price_before">{{ current_variant.compare_at_price | money }}</span>
                {% endif %}{{ section.settings.timer_phrase_after }}</p>
              {% endif %}
              {% if section.settings.stock_active %}
              {% include 'remain-stock' %}
              {% endif %}
            </div>
            {% endif %}

            {% capture faq_product %}
            <div class="product_faq-accordion rte">
              {% include 'faq-style' %}
            </div>
            {% endcapture %}

            {% if section.settings.position_faq == 'before' %}
            {{ faq_product }}
            {% endif %}

            {% if section.settings.show_testi_products %}
            {% include 'testimonials_product' %}
            {% endif %}

            {% capture description %}
            <div {% if section.settings.anim_active %}data-aos="fade-{{ section.settings.animation_img }}"{% endif %} class="product-single__description_page">
              {{ product.description }}
            </div>
            {% if section.settings.position_faq == 'after' %}
            {{ faq_product }}
            {% endif %}
            {% endcapture %}

            {% if product.description != blank %}
            {% unless section.settings.show_desc_extract or section.settings.hide_desc %}
            {{ description }}
            {% endunless %}
            {% endif %}

            {%- if section.settings.button_to_the_top != blank -%}
            <div {% if section.settings.anim_active %}data-aos="fade-{{ section.settings.animation_img }}"{% endif %} class="link_to_top{% if section.settings.button_to_the_top_mob_only %} mobile_only{% endif %}">
              <a href="#{{ section.id }}-top" class="{{ section.settings.choix_style_bouton_ancre }}">
                {{ section.settings.button_to_the_top }}
              </a>
            </div>
            {%- endif -%}

          </div>

          {% if section.settings.social_sharing_products %}
          {% include 'social-sharing', share_title: product.title, share_permalink: product.url, share_image: product.featured_media %}
          {% endif %}
        </div>
      </div>
    </div>

    {% if product.description != blank %}
    {% if section.settings.show_desc_extract %}
    {% unless section.settings.hide_desc %}
    {{ description }}
    {% endunless %}
    {% endif %}
    {% endif %}
    {% if section.settings.show_desc_extract %}
    {%- if section.settings.button_to_the_top != blank -%}
    <div {% if section.settings.anim_active %}data-aos="fade-{{ section.settings.animation_img }}"{% endif %} class="link_to_top{% if section.settings.button_to_the_top_mob_only %} mobile_only{% endif %}">
      <a href="#{{ section.id }}-top" class="{{ section.settings.choix_style_bouton_ancre }}">
        {{ section.settings.button_to_the_top }}
      </a>
    </div>
    {%- endif -%}
    {% endif %}
  </div>

</div>

{% unless product == empty %}
<script type="application/json" id="ProductJson-{{ section.id }}">
    {{ product | json }}
</script>
<script type="application/json" id="ModelJson-{{ section.id }}">
    {{ product.media | where: 'media_type', 'model' | json }}
</script>
{% endunless %}
{% unless section.settings.dividers_bottom == 'none' %}
<div class="dividers-svg dividers-svg-{{ section.id }} dividers-bottom">
  <style>.dividers-svg-{{ section.id }} path, .dividers-svg-{{ section.id }} polygon { fill: {{ section.settings.color_fill_svg_bottom }}; }</style>
  {% case section.settings.dividers_bottom %}
  {% when 'little-arrow' %}
  {% include 'dividers-little-arrow' %}
  {% when 'wave' %}
  {% include 'dividers-wave' %}
  {% when 'straight' %}
  {% include 'dividers-straight' %}
  {% when 'straight-wave' %}
  {% include 'dividers-straight-wave' %}
  {% when 'arrow' %}
  {% include 'dividers-arrow' %}
  {% when 'single-wave' %}
  {% include 'dividers-single-wave' %}
  {% when 'single-reverse-wave' %}
  {% include 'dividers-single-reverse-wave' %}
  {% when 'straight-reverse' %}
  {% include 'dividers-straight-reverse' %}
  {% endcase %}
</div>
{% endunless %}


